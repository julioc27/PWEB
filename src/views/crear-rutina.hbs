<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Rutinas - StrongTogether</title>
	<link rel="shortcut icon" href="/img/favicon.svg" type="image/x-icon">
    <link rel="stylesheet" href="/css/principal/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i&amp;display=swap">
    <link rel="stylesheet" href="/css/principal/fonts/fontawesome-all.min.css">
</head>

<body id="page-top">
    <div id="wrapper">
        {{>nav}}
                <div class="container-fluid">
                    <h3 class="text-dark mb-1">Rutina</h3>
                    <form class="needs-validation" action="/crearrutina" method="POST" novalidate>
  <div class="form-group">
    <label for="dia_inicio">Seleccione el día de inicio:</label>
    <select class="form-control" id="dia_inicio" name="dia_inicio" required>
      <option value="">Seleccione un día</option>
      <option value="lunes">Lunes</option>
      <option value="martes">Martes</option>
      <option value="miercoles">Miércoles</option>
      <option value="jueves">Jueves</option>
      <option value="viernes">Viernes</option>
      <option value="sabado">Sábado</option>
      <option value="domingo">Domingo</option>
    </select>
    <div class="invalid-feedback">Debe seleccionar un día de inicio.</div>
  </div>

  <div class="form-group">
    <label for="num_dias">Número de días (3-7):</label>
    <input class="form-control" type="number" min="3" max="7" id="num_dias" name="num_dias" required>
    <div class="invalid-feedback">Debe ingresar un número entre 3 y 7.</div>
  </div>

  <div class="form-group">
    <p>Seleccione la opción deseada:</p>
    <div class="form-check">
      <input class="form-check-input" type="radio" id="opcion1" name="opcion" value="dias_consecutivos" disabled>
      <label class="form-check-label" for="opcion1">Días consecutivos</label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" id="opcion2" name="opcion" value="dias_alternos" disabled>
      <label class="form-check-label" for="opcion2">Días alternos</label>
    </div>
  </div>

  <button class="btn btn-primary" type="submit">Generar tabla</button>
</form>

<script>
  const numDiasInput = document.getElementById('num_dias');
  const opcionesDiv = document.querySelector('.form-group:last-of-type');
  const opcion1Radio = document.getElementById('opcion1');
  const opcion2Radio = document.getElementById('opcion2');

  numDiasInput.addEventListener('change', function(event) {
    const numDias = numDiasInput.value;

    if (numDias < 5) {
      opcionesDiv.style.display = 'block';
      opcion1Radio.disabled = false;
      opcion2Radio.disabled = false;
    } else {
      opcionesDiv.style.display = 'none';
      opcion1Radio.disabled = true;
      opcion2Radio.disabled = true;
    }
  });
</script>
                </div>
            </div>
{{>footer}}
        </div><a class="border rounded d-inline scroll-to-top" href="#page-top"><i class="fas fa-angle-up"></i></a>
    </div>
    <script src="/js/principal/bootstrap.min.js"></script>
    <script src="/js/principal/chart.min.js"></script>
    <script src="/js/principal/bs-init.js"></script>
    <script src="/js/principal/theme.js"></script>
    <script src="/js/principal/principal.js"></script>
</body>

</html>